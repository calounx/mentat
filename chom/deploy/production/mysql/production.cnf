# =============================================================================
# CHOM Production MariaDB/MySQL Configuration
# Optimized for Laravel Application with High Concurrency
# =============================================================================
# Version: 1.0.0
# Last Updated: 2026-01-02
# Compatible with: MariaDB 10.6+ / MySQL 8.0+
# =============================================================================

[client]
port = 3306
socket = /var/run/mysqld/mysqld.sock
default-character-set = utf8mb4

[mysqld_safe]
socket = /var/run/mysqld/mysqld.sock
nice = 0

[mysqld]

# =============================================================================
# BASIC SETTINGS
# =============================================================================
user = mysql
pid-file = /var/run/mysqld/mysqld.pid
socket = /var/run/mysqld/mysqld.sock
port = 3306
basedir = /usr
datadir = /var/lib/mysql
tmpdir = /tmp
lc-messages-dir = /usr/share/mysql

# Skip reverse DNS lookup for faster connections
skip-name-resolve = 1

# Skip symbolic links
symbolic-links = 0

# =============================================================================
# CHARACTER SET & COLLATION (Laravel Requirement)
# =============================================================================
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci
character_set_server = utf8mb4
collation_server = utf8mb4_unicode_ci

# Default character sets
character-set-client-handshake = FALSE
init_connect = 'SET NAMES utf8mb4 COLLATE utf8mb4_unicode_ci'

# =============================================================================
# NETWORKING & CONNECTION SETTINGS
# =============================================================================

# Bind to all interfaces (or specific IP for production)
bind-address = 0.0.0.0

# Connection limits
max_connections = 200
max_connect_errors = 100
max_allowed_packet = 64M

# Connection timeouts
connect_timeout = 10
wait_timeout = 600
interactive_timeout = 600

# Thread settings
thread_cache_size = 50
thread_stack = 256K

# =============================================================================
# INNODB SETTINGS (Critical for Performance)
# =============================================================================

# Storage engine
default-storage-engine = InnoDB

# Buffer pool (CRITICAL: 70-80% of available RAM)
# For 8GB RAM server: 5-6GB
# For 16GB RAM server: 11-12GB
innodb_buffer_pool_size = 4G
innodb_buffer_pool_instances = 4

# Log files (for write performance)
innodb_log_file_size = 512M
innodb_log_buffer_size = 64M
innodb_flush_log_at_trx_commit = 2  # 1 = safest, 2 = faster

# I/O settings
innodb_io_capacity = 2000
innodb_io_capacity_max = 4000
innodb_read_io_threads = 8
innodb_write_io_threads = 8
innodb_flush_method = O_DIRECT

# Additional InnoDB optimizations
innodb_file_per_table = 1
innodb_open_files = 400
innodb_stats_on_metadata = 0
innodb_autoinc_lock_mode = 2

# Adaptive hash index
innodb_adaptive_hash_index = 1

# =============================================================================
# QUERY CACHE (MySQL < 8.0 only, deprecated in MySQL 8.0)
# =============================================================================
# For MySQL 5.7 and MariaDB:
query_cache_type = 1
query_cache_size = 256M
query_cache_limit = 4M
query_cache_min_res_unit = 2K

# For MySQL 8.0+, query cache is removed - use application-level caching

# =============================================================================
# TABLE CACHE & OPEN FILES
# =============================================================================
table_open_cache = 4000
table_definition_cache = 2000
open_files_limit = 65535

# =============================================================================
# TEMPORARY TABLES & MEMORY
# =============================================================================
tmp_table_size = 256M
max_heap_table_size = 256M

# Sort and join buffers
sort_buffer_size = 4M
join_buffer_size = 4M
read_buffer_size = 2M
read_rnd_buffer_size = 8M

# =============================================================================
# SLOW QUERY LOG (Performance Monitoring)
# =============================================================================
slow_query_log = 1
slow_query_log_file = /var/log/mysql/slow-query.log
long_query_time = 2
log_queries_not_using_indexes = 0
min_examined_row_limit = 1000

# Log slow admin statements
log_slow_admin_statements = 1

# =============================================================================
# GENERAL QUERY LOG (Disable in production for performance)
# =============================================================================
general_log = 0
general_log_file = /var/log/mysql/general.log

# =============================================================================
# ERROR LOG
# =============================================================================
log_error = /var/log/mysql/error.log
log_warnings = 2

# =============================================================================
# BINARY LOG (for replication and point-in-time recovery)
# =============================================================================
# Enable for production with replication
# server-id = 1
# log_bin = /var/log/mysql/mysql-bin.log
# expire_logs_days = 7
# max_binlog_size = 1G
# binlog_format = ROW
# sync_binlog = 1

# =============================================================================
# REPLICATION SETTINGS (if using replication)
# =============================================================================
# relay_log = /var/log/mysql/relay-bin
# relay_log_recovery = 1
# read_only = 0  # Set to 1 on replicas

# =============================================================================
# PERFORMANCE SCHEMA (Resource monitoring)
# =============================================================================
performance_schema = ON
performance_schema_max_table_instances = 12500
performance_schema_max_table_handles = 8000

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Local infile (disable for security)
local_infile = 0

# Secure file privileges
secure_file_priv = /var/lib/mysql-files

# =============================================================================
# ADDITIONAL OPTIMIZATIONS
# =============================================================================

# Key buffer for MyISAM tables (if used)
key_buffer_size = 64M
myisam_sort_buffer_size = 128M

# Query optimization
optimizer_search_depth = 5

# Metadata locks
metadata_locks_hash_instances = 64

# Transaction isolation
transaction_isolation = READ-COMMITTED

# =============================================================================
# SSL/TLS CONFIGURATION (Recommended for production)
# =============================================================================
# ssl-ca = /etc/mysql/ssl/ca-cert.pem
# ssl-cert = /etc/mysql/ssl/server-cert.pem
# ssl-key = /etc/mysql/ssl/server-key.pem
# require_secure_transport = ON

[mysqldump]
quick
quote-names
max_allowed_packet = 64M

[mysql]
default-character-set = utf8mb4

[isamchk]
key_buffer_size = 16M
sort_buffer_size = 16M
read_buffer = 8M
write_buffer = 8M

# =============================================================================
# OPTIMIZATION NOTES
# =============================================================================
# 1. After changing configuration, restart MySQL:
#    systemctl restart mysql
#
# 2. Verify settings:
#    mysql -e "SHOW VARIABLES LIKE 'innodb_buffer_pool_size';"
#
# 3. Monitor slow queries:
#    pt-query-digest /var/log/mysql/slow-query.log
#
# 4. Check InnoDB status:
#    mysql -e "SHOW ENGINE INNODB STATUS\G"
#
# 5. Optimize buffer pool size based on usage:
#    SELECT (PagesData*PageSize)/POWER(1024,3) DataGb FROM
#    (SELECT variable_value PagesData FROM information_schema.global_status
#    WHERE variable_name='Innodb_buffer_pool_pages_data') A,
#    (SELECT variable_value PageSize FROM information_schema.global_status
#    WHERE variable_name='Innodb_page_size') B;
#
# 6. For high-traffic production:
#    - Increase innodb_buffer_pool_size to 70-80% of RAM
#    - Monitor with: mysqladmin -i 1 status
#    - Use pt-query-digest for query optimization
#
# 7. Backup recommendations:
#    - Use percona-xtrabackup for hot backups
#    - Schedule during off-peak hours
#    - Test restore procedures regularly
# =============================================================================
