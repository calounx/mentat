{
  "info": {
    "name": "CHOM API",
    "description": "Complete API collection for CHOM (CPanel Hosting Operations Manager)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.0.0"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{api_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000/api/v1",
      "type": "string"
    },
    {
      "key": "api_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "user_email",
      "value": "admin@chom.test",
      "type": "string"
    },
    {
      "key": "user_password",
      "value": "password",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('api_token', jsonData.token);",
                  "    pm.test('Token received', function () {",
                  "        pm.expect(jsonData.token).to.be.a('string');",
                  "    });",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{user_email}}\",\n  \"password\": \"{{user_password}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            },
            "description": "Authenticate and receive API token"
          }
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{base_url}}/auth/logout",
              "host": ["{{base_url}}"],
              "path": ["auth", "logout"]
            }
          }
        },
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/user",
              "host": ["{{base_url}}"],
              "path": ["user"]
            }
          }
        }
      ]
    },
    {
      "name": "Sites",
      "item": [
        {
          "name": "List Sites",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/sites?page=1&per_page=20",
              "host": ["{{base_url}}"],
              "path": ["sites"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "per_page",
                  "value": "20"
                }
              ]
            }
          }
        },
        {
          "name": "Create Site",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('site_id', jsonData.data.id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"domain\": \"example.test\",\n  \"type\": \"wordpress\",\n  \"php_version\": \"8.2\",\n  \"vps_server_id\": \"{{vps_server_id}}\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/sites",
              "host": ["{{base_url}}"],
              "path": ["sites"]
            }
          }
        },
        {
          "name": "Get Site",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/sites/{{site_id}}",
              "host": ["{{base_url}}"],
              "path": ["sites", "{{site_id}}"]
            }
          }
        },
        {
          "name": "Update Site",
          "request": {
            "method": "PUT",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"php_version\": \"8.3\",\n  \"status\": \"active\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/sites/{{site_id}}",
              "host": ["{{base_url}}"],
              "path": ["sites", "{{site_id}}"]
            }
          }
        },
        {
          "name": "Delete Site",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/sites/{{site_id}}",
              "host": ["{{base_url}}"],
              "path": ["sites", "{{site_id}}"]
            }
          }
        }
      ]
    },
    {
      "name": "VPS Servers",
      "item": [
        {
          "name": "List VPS Servers",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/vps-servers",
              "host": ["{{base_url}}"],
              "path": ["vps-servers"]
            }
          }
        },
        {
          "name": "Create VPS Server",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('vps_server_id', jsonData.data.id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"VPS-NYC-01\",\n  \"hostname\": \"vps-nyc-01.example.com\",\n  \"ip_address\": \"192.0.2.10\",\n  \"provider\": \"digitalocean\",\n  \"region\": \"nyc3\",\n  \"vcpus\": 2,\n  \"memory_mb\": 4096,\n  \"disk_gb\": 80\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/vps-servers",
              "host": ["{{base_url}}"],
              "path": ["vps-servers"]
            }
          }
        },
        {
          "name": "Get VPS Server",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/vps-servers/{{vps_server_id}}",
              "host": ["{{base_url}}"],
              "path": ["vps-servers", "{{vps_server_id}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Backups",
      "item": [
        {
          "name": "List Backups",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/sites/{{site_id}}/backups",
              "host": ["{{base_url}}"],
              "path": ["sites", "{{site_id}}", "backups"]
            }
          }
        },
        {
          "name": "Create Backup",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"type\": \"full\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/sites/{{site_id}}/backups",
              "host": ["{{base_url}}"],
              "path": ["sites", "{{site_id}}", "backups"]
            }
          }
        },
        {
          "name": "Download Backup",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/backups/{{backup_id}}/download",
              "host": ["{{base_url}}"],
              "path": ["backups", "{{backup_id}}", "download"]
            }
          }
        }
      ]
    },
    {
      "name": "Organizations",
      "item": [
        {
          "name": "Get Current Organization",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/organization",
              "host": ["{{base_url}}"],
              "path": ["organization"]
            }
          }
        },
        {
          "name": "Update Organization",
          "request": {
            "method": "PUT",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Organization Name\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/organization",
              "host": ["{{base_url}}"],
              "path": ["organization"]
            }
          }
        }
      ]
    },
    {
      "name": "Users",
      "item": [
        {
          "name": "List Users",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/users",
              "host": ["{{base_url}}"],
              "path": ["users"]
            }
          }
        },
        {
          "name": "Invite User",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"newuser@example.com\",\n  \"name\": \"New User\",\n  \"role\": \"member\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/users/invite",
              "host": ["{{base_url}}"],
              "path": ["users", "invite"]
            }
          }
        },
        {
          "name": "Update User Role",
          "request": {
            "method": "PUT",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"role\": \"admin\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/users/{{user_id}}",
              "host": ["{{base_url}}"],
              "path": ["users", "{{user_id}}"]
            }
          }
        }
      ]
    }
  ]
}
