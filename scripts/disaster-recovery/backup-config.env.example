# ============================================================================
# Offsite Backup Configuration
# ============================================================================
# Copy this file to backup-config.env and configure your settings
# SECURITY: Never commit backup-config.env to version control!
# ============================================================================

# ============================================================================
# S3 Provider Configuration
# ============================================================================
# Supported providers: s3, b2, wasabi, minio, custom
S3_PROVIDER=s3

# AWS S3
#S3_BUCKET=my-backup-bucket
#S3_REGION=us-east-1
#S3_ACCESS_KEY=AKIAIOSFODNN7EXAMPLE
#S3_SECRET_KEY=wJalrXUtnFEMI/K7MDENG/bPxRfiCYEXAMPLEKEY
#S3_STORAGE_CLASS=INTELLIGENT_TIERING  # STANDARD, INTELLIGENT_TIERING, GLACIER

# Backblaze B2
#S3_PROVIDER=b2
#S3_BUCKET=my-backup-bucket
#S3_REGION=us-west-004
#S3_ACCESS_KEY=0051234567890abcdef0000000001
#S3_SECRET_KEY=K001abcdefghijklmnopqrstuvwxyz1234567890
#S3_ENDPOINT=https://s3.us-west-004.backblazeb2.com

# Wasabi
#S3_PROVIDER=wasabi
#S3_BUCKET=my-backup-bucket
#S3_REGION=us-east-1
#S3_ACCESS_KEY=WASABI_ACCESS_KEY
#S3_SECRET_KEY=WASABI_SECRET_KEY

# MinIO (Self-hosted)
#S3_PROVIDER=minio
#S3_BUCKET=backups
#S3_REGION=us-east-1
#S3_ENDPOINT=https://minio.example.com
#S3_ACCESS_KEY=minioadmin
#S3_SECRET_KEY=minioadmin

# ============================================================================
# Backup Configuration
# ============================================================================
BACKUP_SOURCE_DIR=/home/user/repositories/mentat/backups
BACKUP_RETENTION_DAYS=30
BACKUP_FULL_RETENTION_DAYS=90
BACKUP_PARALLEL_UPLOADS=4

# ============================================================================
# Encryption Configuration
# ============================================================================
BACKUP_ENCRYPTION_ENABLED=true

# Option 1: GPG Public Key Encryption (Recommended)
GPG_RECIPIENT=backup@arewel.com
#GPG_KEY_ID=1234ABCD5678EFGH

# Option 2: Symmetric Encryption with Passphrase
#GPG_PASSPHRASE_FILE=/path/to/.gpg-passphrase

# ============================================================================
# Verification Configuration
# ============================================================================
BACKUP_VERIFICATION_ENABLED=true

# ============================================================================
# Monitoring Configuration
# ============================================================================
METRICS_ENABLED=true
METRICS_PUSHGATEWAY=http://mentat.arewel.com:9091

# Alert Notifications
#ALERT_WEBHOOK=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
#ALERT_EMAIL=admin@arewel.com

# ============================================================================
# Logging Configuration
# ============================================================================
LOG_FILE=/var/log/backup-offsite.log
