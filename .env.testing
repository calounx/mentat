# CHOM API Testing Environment Configuration
# Copy this to .env.test and customize for your environment

# API Configuration
API_BASE_URL=http://localhost:8000/api/v1
API_TIMEOUT=30

# Test User Credentials
TEST_USER_EMAIL=test@chom.local
TEST_USER_PASSWORD=Test123!@#Password
TEST_USER_NAME=Test User
TEST_ORG_NAME=Test Organization

# Admin User Credentials (for admin tests)
ADMIN_USER_EMAIL=admin@chom.local
ADMIN_USER_PASSWORD=Admin123!@#Password
ADMIN_USER_NAME=Admin User

# Test Configuration
TEST_PARALLEL_WORKERS=4
TEST_TIMEOUT=120
CLEANUP_AFTER_TESTS=true

# Rate Limiting Test Configuration
RATE_LIMIT_AUTH_MAX=5
RATE_LIMIT_API_MAX=100
RATE_LIMIT_SENSITIVE_MAX=10

# Performance Thresholds (milliseconds)
PERF_THRESHOLD_P95=500
PERF_THRESHOLD_P99=1000

# Load Test Configuration
LOAD_TEST_USERS=10
LOAD_TEST_SPAWN_RATE=2
LOAD_TEST_DURATION=60

# Test Database (if separate test DB is used)
TEST_DB_HOST=localhost
TEST_DB_PORT=3306
TEST_DB_NAME=chom_test

# Docker Test Environment
DOCKER_API_URL=http://landsraad_tst:80/api/v1
