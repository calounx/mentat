{
  "dashboard": {
    "title": "Database Performance",
    "tags": ["database", "mariadb", "performance"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 0,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "type": "graph",
        "title": "Query Execution Time",
        "targets": [
          {
            "expr": "rate(mysql_global_status_slow_queries[5m])",
            "legendFormat": "Slow Queries/sec",
            "refId": "A"
          },
          {
            "expr": "rate(mysql_global_status_queries[5m])",
            "legendFormat": "Total Queries/sec",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "qps", "label": "Queries/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 2,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "type": "graph",
        "title": "Connection Pool Usage",
        "targets": [
          {
            "expr": "mysql_global_status_threads_connected",
            "legendFormat": "Active Connections",
            "refId": "A"
          },
          {
            "expr": "mysql_global_variables_max_connections",
            "legendFormat": "Max Connections",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Connections"},
          {"format": "short"}
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {"params": [0.8], "type": "gt"},
              "operator": {"type": "and"},
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"params": [], "type": "avg"},
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "frequency": "60s",
          "handler": 1,
          "name": "High Connection Pool Usage",
          "noDataState": "no_data",
          "notifications": []
        }
      },
      {
        "id": 3,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "type": "table",
        "title": "Slow Queries Log (>1s)",
        "targets": [
          {
            "expr": "mysql_perf_schema_events_statements_total{digest_text=~\".+\"}",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "filterByValue",
            "options": {
              "filters": [
                {
                  "fieldName": "sum_timer_wait",
                  "config": {
                    "id": "greaterOrEqual",
                    "options": {
                      "value": 1000000000
                    }
                  }
                }
              ]
            }
          }
        ]
      },
      {
        "id": 4,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "type": "graph",
        "title": "Database Size Growth",
        "targets": [
          {
            "expr": "mysql_global_status_innodb_data_written",
            "legendFormat": "Data Written",
            "refId": "A"
          },
          {
            "expr": "mysql_global_status_innodb_data_read",
            "legendFormat": "Data Read",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "bytes", "label": "Bytes"},
          {"format": "short"}
        ]
      },
      {
        "id": 5,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "type": "table",
        "title": "Table Sizes (Top 10)",
        "targets": [
          {
            "expr": "topk(10, mysql_info_schema_table_size{schema=\"chom\"})",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "renameByName": {
                "table": "Table Name",
                "Value": "Size (bytes)"
              }
            }
          }
        ]
      },
      {
        "id": 6,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "type": "graph",
        "title": "Index Usage",
        "targets": [
          {
            "expr": "rate(mysql_global_status_handler_read_rnd_next[5m])",
            "legendFormat": "Table Scans",
            "refId": "A"
          },
          {
            "expr": "rate(mysql_global_status_handler_read_key[5m])",
            "legendFormat": "Index Reads",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Operations/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 7,
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 24},
        "type": "graph",
        "title": "InnoDB Buffer Pool Efficiency",
        "targets": [
          {
            "expr": "(mysql_global_status_innodb_buffer_pool_read_requests / (mysql_global_status_innodb_buffer_pool_read_requests + mysql_global_status_innodb_buffer_pool_reads)) * 100",
            "legendFormat": "Buffer Pool Hit Rate %",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percent", "max": 100, "min": 0, "label": "Hit Rate"},
          {"format": "short"}
        ],
        "thresholds": [
          {"value": 90, "colorMode": "custom", "op": "lt", "fill": true, "line": true, "fillColor": "rgba(255, 73, 73, 0.18)", "lineColor": "rgba(255, 73, 73, 1)"},
          {"value": 95, "colorMode": "custom", "op": "lt", "fill": true, "line": true, "fillColor": "rgba(234, 112, 112, 0.12)", "lineColor": "rgba(237, 129, 40, 0.60)"}
        ]
      }
    ],
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
    }
  }
}
