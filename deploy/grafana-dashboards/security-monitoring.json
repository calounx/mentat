{
  "dashboard": {
    "title": "Security Monitoring",
    "tags": ["security", "auth", "threats"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 0,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "type": "graph",
        "title": "Failed Login Attempts",
        "targets": [
          {
            "expr": "rate(laravel_auth_failed_total[5m])",
            "legendFormat": "Failed Logins/min",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Attempts/min"},
          {"format": "short"}
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {"params": [10], "type": "gt"},
              "operator": {"type": "and"},
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"params": [], "type": "avg"},
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "frequency": "60s",
          "handler": 1,
          "name": "High Failed Login Rate",
          "noDataState": "no_data",
          "notifications": []
        }
      },
      {
        "id": 2,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "type": "graph",
        "title": "API Rate Limit Violations",
        "targets": [
          {
            "expr": "rate(http_requests_total{status=\"429\"}[5m])",
            "legendFormat": "Rate Limited Requests",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Requests/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 3,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "type": "table",
        "title": "Suspicious IPs (fail2ban)",
        "targets": [
          {
            "expr": "fail2ban_banned_ips",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "renameByName": {
                "ip": "IP Address",
                "jail": "Jail",
                "Value": "Ban Count"
              }
            }
          }
        ]
      },
      {
        "id": 4,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "type": "stat",
        "title": "SSL Certificate Expiry",
        "targets": [
          {
            "expr": "(ssl_certificate_expiry_seconds{domain=~\".*arewel.com\"} - time()) / 86400",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "none",
          "colorMode": "value",
          "textMode": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "d",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": null, "color": "red"},
                {"value": 14, "color": "yellow"},
                {"value": 30, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "type": "graph",
        "title": "2FA Enrollments",
        "targets": [
          {
            "expr": "laravel_2fa_enabled_users_total",
            "legendFormat": "Users with 2FA",
            "refId": "A"
          },
          {
            "expr": "laravel_total_users",
            "legendFormat": "Total Users",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Users"},
          {"format": "short"}
        ]
      },
      {
        "id": 6,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "type": "heatmap",
        "title": "Access Patterns by Hour",
        "targets": [
          {
            "expr": "sum(increase(http_requests_total[1h])) by (hour)",
            "format": "time_series",
            "refId": "A"
          }
        ],
        "dataFormat": "tsbuckets"
      },
      {
        "id": 7,
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 24},
        "type": "table",
        "title": "Recent Security Events",
        "targets": [
          {
            "expr": "laravel_audit_log{event_type=~\"authentication_failed|unauthorized_access|suspicious_activity\"}",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "renameByName": {
                "timestamp": "Time",
                "event_type": "Event Type",
                "user": "User",
                "ip": "IP Address",
                "details": "Details"
              }
            }
          }
        ]
      }
    ],
    "time": {
      "from": "now-24h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
    }
  }
}
