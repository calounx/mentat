{
  "title": "CHOM - Database Performance",
  "uid": "chom-database-perf",
  "tags": ["chom", "database", "postgresql"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "30s",
  "panels": [
    {
      "id": 1,
      "title": "Active Connections",
      "type": "timeseries",
      "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "targets": [
        {
          "datasource": {"type": "prometheus", "uid": "prometheus"},
          "expr": "pg_stat_activity_count",
          "legendFormat": "{{state}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {"defaults": {"unit": "short"}}
    },
    {
      "id": 2,
      "title": "Connection Pool Usage",
      "type": "gauge",
      "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8},
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "targets": [
        {
          "datasource": {"type": "prometheus", "uid": "prometheus"},
          "expr": "sum(pg_stat_activity_count) / pg_settings_max_connections * 100",
          "legendFormat": "Usage %",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "max": 100,
          "thresholds": {
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 70},
              {"color": "red", "value": 90}
            ]
          }
        }
      }
    },
    {
      "id": 3,
      "title": "Transactions/sec",
      "type": "timeseries",
      "gridPos": {"x": 0, "y": 8, "w": 12, "h": 8},
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "targets": [
        {
          "datasource": {"type": "prometheus", "uid": "prometheus"},
          "expr": "rate(pg_stat_database_xact_commit{datname=\"chom\"}[5m])",
          "legendFormat": "Commits",
          "refId": "A"
        },
        {
          "datasource": {"type": "prometheus", "uid": "prometheus"},
          "expr": "rate(pg_stat_database_xact_rollback{datname=\"chom\"}[5m])",
          "legendFormat": "Rollbacks",
          "refId": "B"
        }
      ],
      "fieldConfig": {"defaults": {"unit": "ops"}}
    },
    {
      "id": 4,
      "title": "Cache Hit Ratio",
      "type": "timeseries",
      "gridPos": {"x": 12, "y": 8, "w": 12, "h": 8},
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "targets": [
        {
          "datasource": {"type": "prometheus", "uid": "prometheus"},
          "expr": "pg_stat_database_blks_hit{datname=\"chom\"} / (pg_stat_database_blks_hit{datname=\"chom\"} + pg_stat_database_blks_read{datname=\"chom\"}) * 100",
          "legendFormat": "Cache Hit %",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {
            "steps": [
              {"color": "red", "value": null},
              {"color": "yellow", "value": 90},
              {"color": "green", "value": 99}
            ]
          }
        }
      }
    },
    {
      "id": 5,
      "title": "Database Size",
      "type": "stat",
      "gridPos": {"x": 0, "y": 16, "w": 8, "h": 6},
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "targets": [
        {
          "datasource": {"type": "prometheus", "uid": "prometheus"},
          "expr": "pg_database_size_bytes{datname=\"chom\"}",
          "legendFormat": "Size",
          "refId": "A"
        }
      ],
      "fieldConfig": {"defaults": {"unit": "bytes"}},
      "options": {"colorMode": "value"}
    },
    {
      "id": 6,
      "title": "Rows/sec",
      "type": "timeseries",
      "gridPos": {"x": 8, "y": 16, "w": 16, "h": 6},
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "targets": [
        {
          "datasource": {"type": "prometheus", "uid": "prometheus"},
          "expr": "rate(pg_stat_database_tup_fetched{datname=\"chom\"}[5m])",
          "legendFormat": "Fetched",
          "refId": "A"
        },
        {
          "datasource": {"type": "prometheus", "uid": "prometheus"},
          "expr": "rate(pg_stat_database_tup_inserted{datname=\"chom\"}[5m])",
          "legendFormat": "Inserted",
          "refId": "B"
        },
        {
          "datasource": {"type": "prometheus", "uid": "prometheus"},
          "expr": "rate(pg_stat_database_tup_updated{datname=\"chom\"}[5m])",
          "legendFormat": "Updated",
          "refId": "C"
        },
        {
          "datasource": {"type": "prometheus", "uid": "prometheus"},
          "expr": "rate(pg_stat_database_tup_deleted{datname=\"chom\"}[5m])",
          "legendFormat": "Deleted",
          "refId": "D"
        }
      ],
      "fieldConfig": {"defaults": {"unit": "rowsps"}}
    },
    {
      "id": 7,
      "title": "Lock Waits",
      "type": "timeseries",
      "gridPos": {"x": 0, "y": 22, "w": 12, "h": 8},
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "targets": [
        {
          "datasource": {"type": "prometheus", "uid": "prometheus"},
          "expr": "pg_locks_count",
          "legendFormat": "{{mode}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {"defaults": {"unit": "short"}}
    },
    {
      "id": 8,
      "title": "Deadlocks",
      "type": "timeseries",
      "gridPos": {"x": 12, "y": 22, "w": 12, "h": 8},
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "targets": [
        {
          "datasource": {"type": "prometheus", "uid": "prometheus"},
          "expr": "rate(pg_stat_database_deadlocks{datname=\"chom\"}[5m])",
          "legendFormat": "Deadlocks",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "thresholds": {
            "steps": [
              {"color": "green", "value": null},
              {"color": "red", "value": 0.1}
            ]
          }
        }
      }
    }
  ],
  "templating": {"list": []},
  "annotations": {"list": []},
  "time": {"from": "now-1h", "to": "now"}
}
