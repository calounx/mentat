{
  "dashboard": {
    "title": "CHOM - Database Performance",
    "tags": ["chom", "database", "performance"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Query Rate",
        "type": "graph",
        "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(chom_laravel_db_queries_total[5m])) by (type)",
            "legendFormat": "{{type}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"label": "queries/s", "format": "short"},
          {"format": "short"}
        ]
      },
      {
        "id": 2,
        "title": "Query Duration (p95)",
        "type": "graph",
        "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(chom_laravel_db_query_duration_seconds_bucket[5m])) by (le, type))",
            "legendFormat": "{{type}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"label": "seconds", "format": "s"},
          {"format": "short"}
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {"params": [0.1], "type": "gt"},
              "operator": {"type": "and"},
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"params": [], "type": "avg"},
              "type": "query"
            }
          ],
          "name": "Slow Database Queries"
        }
      },
      {
        "id": 3,
        "title": "Slow Query Rate",
        "type": "graph",
        "gridPos": {"x": 0, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(chom_laravel_db_queries_slow_total[5m]))",
            "legendFormat": "Slow Queries",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"label": "queries/s", "format": "short"},
          {"format": "short"}
        ]
      },
      {
        "id": 4,
        "title": "Query Duration by Type",
        "type": "graph",
        "gridPos": {"x": 12, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, sum(rate(chom_laravel_db_query_duration_seconds_bucket[5m])) by (le, type))",
            "legendFormat": "{{type}} (p50)",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(chom_laravel_db_query_duration_seconds_bucket[5m])) by (le, type))",
            "legendFormat": "{{type}} (p95)",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, sum(rate(chom_laravel_db_query_duration_seconds_bucket[5m])) by (le, type))",
            "legendFormat": "{{type}} (p99)",
            "refId": "C"
          }
        ],
        "yaxes": [
          {"label": "seconds", "format": "s"},
          {"format": "short"}
        ]
      },
      {
        "id": 5,
        "title": "Query Type Distribution",
        "type": "piechart",
        "gridPos": {"x": 0, "y": 16, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(increase(chom_laravel_db_queries_total[5m])) by (type)",
            "legendFormat": "{{type}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 6,
        "title": "Database Connection Pool",
        "type": "graph",
        "gridPos": {"x": 12, "y": 16, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "chom_laravel_db_connections_active",
            "legendFormat": "Active Connections",
            "refId": "A"
          },
          {
            "expr": "chom_laravel_db_connections_max",
            "legendFormat": "Max Connections",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"label": "connections", "format": "short"},
          {"format": "short"}
        ]
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    }
  }
}
