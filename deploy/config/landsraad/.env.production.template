# CHOM Laravel Environment Configuration Template
# Copy this to /var/www/chom/shared/.env and fill in the values

# Application
APP_NAME="CHOM"
APP_ENV=production
APP_KEY=base64:GENERATE_WITH_php_artisan_key:generate
APP_DEBUG=false
APP_URL=https://chom.arewel.com

# Logging
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=warning

# Database
DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=chom
DB_USERNAME=chom
DB_PASSWORD=YOUR_SECURE_DATABASE_PASSWORD

# Cache
CACHE_DRIVER=redis
CACHE_PREFIX=chom_cache

# Session
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=chom.arewel.com
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=lax

# Queue
QUEUE_CONNECTION=redis
QUEUE_PREFIX=chom_queue

# Redis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1
REDIS_QUEUE_DB=2

# Mail
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@chom.arewel.com"
MAIL_FROM_NAME="${APP_NAME}"

# Broadcasting
BROADCAST_DRIVER=log

# Filesystem
FILESYSTEM_DISK=local

# AWS (if using S3)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Security
BCRYPT_ROUNDS=12

# API Keys
OPENAI_API_KEY=YOUR_OPENAI_API_KEY

# JWT
JWT_SECRET=YOUR_JWT_SECRET
JWT_TTL=60
JWT_REFRESH_TTL=20160

# VPS Provider Credentials
HETZNER_API_TOKEN=YOUR_HETZNER_API_TOKEN
DIGITALOCEAN_API_TOKEN=YOUR_DIGITALOCEAN_API_TOKEN
VULTR_API_KEY=YOUR_VULTR_API_KEY
LINODE_API_TOKEN=YOUR_LINODE_API_TOKEN

# SSH Keys
DEFAULT_SSH_KEY_PATH=/home/stilgar/.ssh/id_ed25519

# Monitoring
PROMETHEUS_METRICS_ENABLED=true
PROMETHEUS_METRICS_PORT=9200

# Sentry (Error Tracking)
SENTRY_LARAVEL_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# CORS
CORS_ALLOWED_ORIGINS=https://chom.arewel.com

# Telescope (Development only - disable in production)
TELESCOPE_ENABLED=false

# Maintenance Mode
MAINTENANCE_MODE=false
